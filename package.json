{
  "name": "webcrawler",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:api": "tsx packages/api/src/index.ts",
    "start:web": "cd packages/web && npm run dev",
    "start:all": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "test": "cd packages/core && npm test",
    "test:api": "cd packages/api && npm test",
    "test:web": "cd packages/web && npm test",
    "test:all": "npm run test && npm run test:api && npm run test:web",
    "build": "cd packages/core && npm run build && cd ../api && npm run build && cd ../web && npm run build",
    "dev": "npm run start:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "concurrently": "^9.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
